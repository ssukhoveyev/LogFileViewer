<Window x:Class="LogFileViewer.WindowConfig"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogFileViewer"
        mc:Ignorable="d"
        Title="Настройки" Height="300" Width="300">
    <Grid>
        <ComboBox x:Name="cbCodepage" HorizontalAlignment="Left" Margin="9,8,0,0" VerticalAlignment="Top" Width="274" SelectionChanged="cbCodepage_SelectionChanged">
            <MenuItem Header="Windows-1251"/>
            <MenuItem Header="UTF-8"/>
        </ComboBox>

    </Grid>
</Window>
